    <form action="/addproduct" method="POST">
        <label for="asin">ASIN:</label>
        <input type="text" id="asin" name="asin" required><br><br>

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required><br><br>

        <label for="imgUrl">Image URL:</label>
        <input type="text" id="imgUrl" name="imgUrl"><br><br>

        <label for="stars">Stars:</label>
        <input type="number" id="stars" name="stars" min="0" max="5" step="0.1"><br><br>

        <label for="reviews">Reviews:</label>
        <input type="number" id="reviews" name="reviews" min="0"><br><br>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" min="0" step="0.01" required><br><br>

        <label for="listPrice">List Price:</label>
        <input type="number" id="listPrice" name="listPrice" min="0" step="0.01" required><br><br>

        <label for="categoryName">Category Name:</label>
        <input type="text" id="categoryName" name="categoryName" required><br><br>

        <label for="boughtInLastMonth">Bought In Last Month:</label>
        <input type="number" id="boughtInLastMonth" name="boughtInLastMonth" min="0"><br><br>

        <button type="submit">Submit</button>
    </form>
