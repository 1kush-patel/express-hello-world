<form id="searchForm">
    <label for="page">Page:</label>
    <input type="number" id="page" name="page" min="1" value="1"><br><br>

    <label for="perPage">Per Page:</label>
    <input type="number" id="perPage" name="perPage" min="1" value="10"><br><br>

    <label for="title">Title:</label>
    <input type="text" id="title" name="title"><br><br>

    <button type="submit" onclick="getMovies()">Search</button>
</form>


<script>
    async function getMovies() {
      try {
        let page = document.getElementById("page").value;
        let perPage = document.getElementById("perPage").value;
        let title = document.getElementById("title").value;
        
        fetch('http://localhost:3000/api/movies?page='+page+'&perPage='+perPage+'&title='+title, {
        method: "GET",
        headers: {
            "Content-Type": "application/json"
        }
    })
      } catch (error) {
        console.error('Error fetching message:', error);
      }
    }
  </script>