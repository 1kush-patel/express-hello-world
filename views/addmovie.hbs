<form id="addMovieForm">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required><br><br>

    <label for="plot">Plot:</label>
    <textarea id="plot" name="plot" rows="4" cols="50" required></textarea><br><br>

    <label for="genres">Genres:</label>
    <input type="text" id="genres" name="genres" required><br><br>

    <label for="runtime">Runtime:</label>
    <input type="number" id="runtime" name="runtime" min="1" required><br><br>

    <label for="cast">Cast:</label>
    <input type="text" id="cast" name="cast" required><br><br>

    <label for="poster">Poster URL:</label>
    <input type="text" id="poster" name="poster" required><br><br>

    <label for="fullplot">Full Plot:</label>
    <textarea id="fullplot" name="fullplot" rows="4" cols="50" required></textarea><br><br>

    <label for="languages">Languages:</label>
    <input type="text" id="languages" name="languages" required><br><br>

    <label for="released">Released Date:</label>
    <input type="date" id="released" name="released" required><br><br>

    <label for="directors">Directors:</label>
    <input type="text" id="directors" name="directors" required><br><br>

    <label for="rated">Rated:</label>
    <input type="text" id="rated" name="rated" required><br><br>

    <label for="awards">Awards:</label>
    <input type="text" id="awards" name="awards" required><br><br>

    <label for="year">Year:</label>
    <input type="number" id="year" name="year" min="1800" required><br><br>

    <label for="imdbRating">IMDB Rating:</label>
    <input type="number" id="imdbRating" name="imdbRating" min="0" max="10" step="0.1" required><br><br>

    <label for="imdbVotes">IMDB Votes:</label>
    <input type="number" id="imdbVotes" name="imdbVotes" min="0" required><br><br>

    <label for="countries">Countries:</label>
    <input type="text" id="countries" name="countries" required><br><br>

    <button type="submit" onclick="addMovie()">Add Movie</button>
</form>

<script>
    async function deleteMovie() {
      try {
        fetch('http://localhost:3000/api/movies/', {
        method: "POST",
        headers: {
            "Content-Type": "application/json"
        }
    })
      } catch (error) {
        console.error('Error fetching message:', error);
      }
    }
  </script>